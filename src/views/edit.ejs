<!doctype html>
<html lang="es">
<%- include('./partials/head') %>

<body>
  <main class="">
    
    <!-- Cuerpo principal -->
    <section class="row">
      <article class="col-12  card">
        <div class="card-body">
          <h2 class="display-4 text-white bg-dark text-center pt-2">Actualizar un Producto</h2>
        </div>
      </article>
    </section>

    <section class="bg-home pt-4">
      <div class="container">
        <div class="row">
          <div class="col-8 mx-auto bg-light ">
            <div class="create-form">
              <form action="/productos/edit/<%= productoEditar.id%>?_method=PUT
                            " method="POST">
                <div class="form-group p-1">
                  <input type="text" class="form-control" name="nombre" placeholder="Nombre" required="required" value="<%= productoEditar.nombre%>">
                </div>
               
                <div class="form-group p-1">
                  <input type="number" class="form-control" name="precio" placeholder="Indique el precio" required="required" value="<%= productoEditar.precio%>">
                </div>
                
                <!--AquÃ­ solicito la imagen-->
                <div class="custom-file">
                  <figure class="form-group p-1">
                    <img class="w-100" src="/images/<%= productoEditar.imagen%>" alt="">
                  </figure>
                  <input type="hidden" name="oldImagen" value="<%= productoEditar.imagen%>">
                  <!--De esta forma logro conservar y que viaje la imagen anterior de esta forma evito que el usuario seleccione una imagen nuevamente, ( si no lo desea) -->
                  <input type="file" name="imagen" disabled>

                </div>
                <div class="form-group p-1">
                  <button type="submit" class="btn btn btn-info">Actualizar</button>
                  
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>

</html>